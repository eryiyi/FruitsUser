<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/comimage"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_margin="5dip"
        android:contentDescription="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/demosmall1" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/comname"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="5dip"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:text="1233" />

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"
                    android:layout_marginLeft="5dip"
                    android:gravity="bottom"
                    android:text="@string/weightw"
                    android:textColor="@color/balck_text_subtitle" />
            <TextView
                    android:id="@+id/comprice"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="30"
                    android:textColor="@color/red" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/purchasequantity"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="right"
                    android:text="@string/status1"
                    android:textColor="@color/common_grey" />
        </LinearLayout>
        <TextView
                android:id="@+id/numbner"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="5dip"
                android:gravity="bottom"
                android:text="@string/jiehuoriqi"
                android:textColor="@color/balck_text_subtitle" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/comsuppri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/songhuodizhi"
                android:textColor="@color/common_grey" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>